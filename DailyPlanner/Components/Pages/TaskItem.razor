<link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&display=swap" rel="stylesheet">
<div class="container">
    <div class="title-bar">
        <input type="checkbox" id="checkbox" checked="@IsDone" @onchange="OnChange" />
        <label for="checkbox">@Title</label>
    </div>
    <div class="task-body">
        <p>@Desc</p>
        <img src="https://picsum.photos/100/100" alt="Random photo" />
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Desc { get; set; } = string.Empty;

    [Parameter]
    public bool IsDone { get; set; }

    [Parameter]
    public EventCallback<bool> IsDoneChanged { get; set; }

    private async Task OnChange(ChangeEventArgs e) {
        IsDone = (bool)e.Value!;
        await IsDoneChanged.InvokeAsync(IsDone);
    }

}
